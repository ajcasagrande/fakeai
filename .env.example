# FakeAI Environment Configuration
# Copy this file to .env and customize for your environment

# Server Configuration
FAKEAI_HOST=0.0.0.0
FAKEAI_PORT=8000
FAKEAI_DEBUG=false

# Authentication
FAKEAI_REQUIRE_API_KEY=true
FAKEAI_API_KEYS=sk-fake-key-1,sk-fake-key-2,sk-fake-key-3
FAKEAI_HASH_API_KEYS=false

# JWT Secret for Admin Authentication
# IMPORTANT: Set this in production to a secure random string for persistent admin tokens
# If not set, a random secret will be generated on each server start (tokens won't persist)
# Generate a secure secret with: python -c "import secrets; print(secrets.token_urlsafe(32))"
FAKEAI_JWT_SECRET=your-secure-jwt-secret-change-in-production

# Timing Configuration
FAKEAI_TTFT_MS=20
FAKEAI_TTFT_VARIANCE_PERCENT=10
FAKEAI_ITL_MS=5
FAKEAI_ITL_VARIANCE_PERCENT=10

# KV Cache (AI-Dynamo)
FAKEAI_KV_CACHE_ENABLED=true
FAKEAI_KV_CACHE_BLOCK_SIZE=16
FAKEAI_KV_CACHE_NUM_WORKERS=4
FAKEAI_KV_OVERLAP_WEIGHT=1.0

# Rate Limiting
FAKEAI_RATE_LIMIT_ENABLED=false
FAKEAI_RATE_LIMIT_TIER=tier-1
FAKEAI_RATE_LIMIT_RPM=500
FAKEAI_RATE_LIMIT_TPM=10000

# Error Injection (for testing)
FAKEAI_ERROR_INJECTION_ENABLED=false
FAKEAI_ERROR_INJECTION_RATE=0.0

# Security
FAKEAI_ENABLE_ABUSE_DETECTION=false
FAKEAI_ENABLE_INPUT_VALIDATION=false

# CORS
FAKEAI_CORS_ALLOWED_ORIGINS=*
FAKEAI_CORS_ALLOW_CREDENTIALS=true
